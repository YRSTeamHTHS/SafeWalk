<div class="modal fade" id="report-modal">
    <div class="modal-dialog">
        <form class="form-horizontal" method="post" action="/report/submit" id="report-form">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h2 style="color:black">Submit a Report</h2>
                </div>
                <div class="modal-body" id="report-form-screen">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-offset-1 col-lg-10">
                                <input type="number" class="form-control" name="code" id="form-code" placeholder="Intersection ID"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-offset-1 col-lg-10">
                                <select name="type" id="form-type" class="form-control input-lg">
                                    <option value="" disabled selected>Report type</option>
                                    <% for(var i=0; i<types.length; i++){ %>
                                    <option value="<%= types[i] %>"><%= types[i] %></option><% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-offset-1 col-lg-10">
                                <input type="text" id="form-comment" class="form-control" id="inputComment" name="comment" placeholder="Comment"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-body" id="report-loading-screen">Submitting</div>
                <div class="modal-body" id="report-done-screen">Done</div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" id="report-submit-btn">Submit</button>
                </div>

            </div>
        </form>

    </div>
</div>